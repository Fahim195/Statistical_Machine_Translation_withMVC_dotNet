@{
    ViewBag.Title = "Home Page";
}
@{ Layout = null;}
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#convertBtn").click(function () {
                var sourceLanguage = $("#sourceTextArea").val();
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("Translate", "Home")?sourceLanguage=' + sourceLanguage+' ',
                    success: function (result) {
                        $("#destinationTextArea").html(result);
                    }
                });
            });
        });
    </script>
</head>
<body style="background-color:aliceblue">
    <div class="container-fluid" style="height:120px;background-color:navy">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <h1 style="text-align:center;color:white;font-weight:bolder;" >Language Translator</h1>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
    <div class="container" style="margin-top:100px">
        <div class="row">
            
            <div class="col-md-5">
                <div class="form-group">
                    <label for="usr">Source</label>
                    <textarea class="form-control" rows="5" id="sourceTextArea"></textarea>
                </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-5">
                <div class="form-group">
                    <label for="usr">Destination</label>
                    <textarea class="form-control" rows="5" id="destinationTextArea"></textarea>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
        <div class="row">
            <div class="col-md-5"></div>
            <div class="col-md-1">
                <button type="button" class="btn btn-primary active" id="convertBtn">Convert</button>
            </div>
            <div class="col-md-5"></div>
            <div class="col-md-1"></div>
        </div>
    </div>
</body>
</html>
